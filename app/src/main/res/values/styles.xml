<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Customize button round corner drawable -->
    <style name="login_checkBox" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">@color/login_blue</item>
        <item name="android:colorControlNormal">@color/login_grey</item>
    </style>

    <!-- Customize dialog for verify code-->
    <style name="verify_dialog" parent="android:style/Theme.Dialog">
        <!-- 是否去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否去除边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 背景颜色及和透明程度 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 是否模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- dialog 动画-->
    <style name="dialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/verify_code_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/verify_code_dialog_out</item>
    </style>

    <style name="CustomRadioBtn">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/main_bottom_nav_text_selector</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">5dp</item>
    </style>

</resources>